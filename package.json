{
  "name": "htl-template-loader",
  "version": "0.0.0-development",
  "description": "Webpack loader for HTL/Sightly templates",
  "main": "index.js",
  "scripts": {
    "test": "mocha --no-timeout test/*.test.js",
    "example": "webpack --config example/webpack.config.js",
    "format": "prettier --write \"**/*.js\"",
    "release": "standard-version",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "htl",
    "sightly"
  ],
  "files": [
    "index.js",
    "lib/runtime-variables.js",
    "lib/htl-runtime.js",
    "lib/template-api.js",
    "types.d.ts"
  ],
  "types": "./typings.ts",
  "author": "Jan Nicklas",
  "repository": "github:jantimon/htl-template-loader",
  "license": "MIT",
  "devDependencies": {
    "@adobe/htlengine": "6.3.1",
    "husky": "^4.2.5",
    "memfs": "3.2.0",
    "mocha": "^8.0.1",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "webpack": "4.44.1",
    "webpack-cli": "3.3.12",
    "semantic-release": "^17.1.1"
  },
  "peerDependencies": {
    "@adobe/htlengine": "^6.3.1"
  },
  "dependencies": {
    "loader-utils": "^2.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
